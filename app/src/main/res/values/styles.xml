<resources>

    <style name="TextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="StyledSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="StyledButtonGreen" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyledButtonBlue" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:backgroundTint">#3F51B5</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
