<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Groupe Spinner -->
        <Spinner
            android:id="@+id/spinnerGroupes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Ã‰tudiant Spinner -->
        <Spinner
            android:id="@+id/spinnerEtudiants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Date -->
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (ex: 2024-06-01)"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <!-- Module Spinner -->
        <Spinner
            android:id="@+id/spinnerModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Motif Spinner -->
        <Spinner
            android:id="@+id/spinnerMotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Bouton Ajouter Absence -->
        <Button
            android:id="@+id/btnAjouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter Absence"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <!-- Bouton Voir Liste des absences -->
        <Button
            android:id="@+id/btnVoirListe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir la liste des absences"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>